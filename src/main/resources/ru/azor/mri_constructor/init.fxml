<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>


<HBox prefHeight="600.0" prefWidth="800.0" xmlns="http://javafx.com/javafx/16" xmlns:fx="http://javafx.com/fxml/1" fx:controller="ru.azor.mri_constructor.InitController">
   <children>
      <VBox alignment="CENTER" spacing="20.0" HBox.hgrow="ALWAYS">
          <padding>
              <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
          </padding>
      
          <Label text="Пациент" />
         <Label text="Фамилия Имя Отчество" />
         <TextField fx:id="fullName" onKeyTyped="#typedFullName" />
         <Label text="Дата рождения" />
         <TextField fx:id="dataOfBirth" onKeyTyped="#typedDateOfBirth" />
         <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0">
            <children>
               <Button onAction="#nextWindow" text="&gt;&gt;" />
            </children>
         </HBox>
      </VBox>
      <VBox spacing="20.0" HBox.hgrow="ALWAYS">
         <children>
            <Label text="Прогресс:">
               <VBox.margin>
                  <Insets />
               </VBox.margin>
            </Label>
            <Label fx:id="fullNameLabel" layoutX="10.0" layoutY="10.0" />
            <Label fx:id="dateOfBirthLabel" layoutX="10.0" layoutY="28.0" />
            <Label fx:id="scoliosisTypeLabel" layoutX="10.0" layoutY="45.0" />
            <Label fx:id="bendingAngleLabel" layoutX="10.0" layoutY="63.0" />
            <Label fx:id="apexOfTheBendLabel" layoutX="10.0" layoutY="80.0" />
         </children>
         <padding>
            <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
         </padding>
      </VBox>
   </children>
</HBox>
